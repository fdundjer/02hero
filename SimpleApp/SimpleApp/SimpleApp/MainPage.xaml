<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleApp.MainPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0"
               FontSize="90" 
               Grid.Column="0" 
               Grid.ColumnSpan="4" 
               HorizontalTextAlignment="End" 
               VerticalOptions="CenterAndExpand"
               MaxLines="3"
               Text="42"/>
        <Button Grid.Row="1" FontSize="45" Grid.Column="3" Text="/"/>
        <Button Grid.Row="1" FontSize="45" Grid.Column="0" Text="7" />
        <Button Grid.Row="1" FontSize="45" Grid.Column="1" Text="8"/>
        <Button Grid.Row="1" FontSize="45" Grid.Column="2" Text="9" />
        <Button Grid.Row="2" FontSize="45" Grid.Column="3" Text="*"/>
        <Button Grid.Row="2" FontSize="45" Grid.Column="0" Text="4"/>
        <Button Grid.Row="2" FontSize="45" Grid.Column="1" Text="5"/>
        <Button Grid.Row="2" FontSize="45" Grid.Column="2" Text="6"/>
        <Button Grid.Row="3" FontSize="45" Grid.Column="3" Text="-" />
        <Button Grid.Row="3" FontSize="45" Grid.Column="0" Text="1"/>
        <Button Grid.Row="3" FontSize="45" Grid.Column="1" Text="2"/>
        <Button Grid.Row="3" FontSize="45" Grid.Column="2" Text="3" />
        <Button Grid.Row="4" FontSize="45" Grid.Column="3" Text="+" />
        <Button Grid.Row="4" FontSize="45" Grid.Column="0" Text="0"/>
        <Button Grid.Row="4" FontSize="45" Grid.Column="1" Text="." />
        <Button Grid.Row="4" FontSize="45" Grid.Column="2" Text="="/>
    </Grid>

</ContentPage>
