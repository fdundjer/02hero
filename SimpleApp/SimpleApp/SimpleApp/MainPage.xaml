<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleApp.MainPage"
             BackgroundColor="LightCyan">

    <StackLayout VerticalOptions="CenterAndExpand" Margin="20" Spacing="20">
        <Entry x:Name="UsernameEntry" Placeholder="Username" FontSize="25"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" FontSize="25"/>
        <Button Clicked="Button_Clicked"  BackgroundColor="Blue" TextColor="White" CornerRadius="10" Text="Login"/>
        <Label x:Name="LoginLabel" IsVisible="False" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
